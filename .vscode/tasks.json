{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Raylib Game",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/MD",
                "/I", "${workspaceFolder}/include",
                "${workspaceFolder}/main.cpp",
                "/Fe:", "${workspaceFolder}/main.exe",
                "/link",
                "/LIBPATH:${workspaceFolder}/lib",
                "raylib.lib",
                "user32.lib",
                "gdi32.lib",
                "winmm.lib",
                "shell32.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}