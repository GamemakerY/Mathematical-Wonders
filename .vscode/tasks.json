{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run Raylib",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/MD",
                "/I", "\"${workspaceFolder}\\raylib_desktop\\include\"",
                "\"${workspaceFolder}\\src\\*.cpp\"",
                "/Fe:\"${workspaceFolder}\\bin\\main.exe\"",
                "/link",
                "/LIBPATH:\"${workspaceFolder}\\raylib_desktop\\lib\"",
                "raylib.lib",
                "opengl32.lib",
                "User32.lib",
                "Gdi32.lib",
                "Shell32.lib",
                "Winmm.lib",
                "&&",
                "\"${workspaceFolder}\\bin\\main.exe\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}